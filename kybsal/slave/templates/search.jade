extends base
- load staticfiles
- load slave_tags

- block content

.container
	.row
		.col-sm-3
			- show_slave_dashboard
		.col-sm-9
			.list-group
				if slaves
					for s in slaves
						.list-group-item
							blockquote
								a(href="{% url 'slave' s.username %}") {{ s.get_full_name }}
				else
					.list-group-item
						blockquote
							a Fant ingen slaver!

- endblock
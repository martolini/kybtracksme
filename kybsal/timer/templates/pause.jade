extends base
- load staticfiles
- load slave_tags

- block content

.container
	.row
		.col-sm-3
			- show_slave_dashboard
		.col-sm-9
			.list-group
				if slaves
					for s in slaves
						.list-group-item
							blockquote
								a(href="{% url 'slave' s.pk %}") {{ s.get_full_name }}
								span.text-muted.pull-right
									i.fa-fw.fa-clock-o.fa
									| &nbsp;since {{ s.get_current_action.started|timesince }} ago
				else
					.list-group-item
						blockquote
							p.text-warning Ingen har pause n√• :-(

- endblock